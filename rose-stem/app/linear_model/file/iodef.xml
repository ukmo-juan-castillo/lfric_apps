<?xml version="1.0" encoding="UTF-8"?>
<simulation>

  <!-- In this version we have ONE context  -->

  <context id = "gungho_atm">

    <!-- Include variable definitions -->
    <variable_definition src="$METADATA/variable_def_main.xml"/>

    <!-- Include axis definitions -->
    <axis_definition src="$METADATA/axis_def_main.xml"/>

    <!-- Include domain definitions -->
    <domain_definition src="$METADATA/domain_def_main.xml"/>

    <!-- Include grid definitions -->
    <grid_definition src="$METADATA/grid_def_main.xml"/>

    <!-- Include field definitions -->
    <field_definition src="$METADATA/lfric_dictionary.xml"/>
    <field_definition src="$METADATA/field_def_diags.xml"/>
    <field_definition src="$METADATA/field_def_initial_diags.xml"/>
    <field_definition src="./field_def_diags_ls.xml"/>

    <!-- Include file definitions -->
    <file_definition src="./file_def_read.xml"/>
    <file_definition src="./file_def_ls.xml"/>
    <file_definition src="./file_def_diags_ls.xml"/>
    <file_definition src="./file_def_diags.xml"/>
    <file_definition src="./file_def_initial.xml"/>
    <file_definition src="./file_def_ancil.xml"/>
    <file_definition src="./file_def_check_restart.xml"/>
    
    <axis_definition>
      <axis id="ls_axis" name="ls_axis" n_glo="7"/>
    </axis_definition>

    <grid_definition>
      <grid id="full_level_face_ls_grid">
        <domain domain_ref="face"/>
        <axis axis_ref="vert_axis_full_levels"/>
        <axis axis_ref="ls_axis"/>
      </grid>
      <grid id="half_level_face_ls_grid">
        <domain domain_ref="face"/>
        <axis axis_ref="vert_axis_half_levels"/>
        <axis axis_ref="ls_axis"/>
      </grid>
      <grid id="half_level_edge_ls_grid">
        <domain domain_ref="edge"/>
        <axis axis_ref="vert_axis_half_levels"/>
        <axis axis_ref="ls_axis"/>
      </grid>
      <grid id="one_level_face_ls_grid">
        <domain domain_ref="face"/>
        <axis axis_ref="1"/>
        <axis axis_ref="ls_axis"/>
      </grid>
    </grid_definition>

  </context>

  <context id = "xios">
    <variable_definition>
      <variable_group id = "buffer">
        <variable id = "optimal_buffer_size" type = "string" >performance</variable>
        <variable id = "buffer_size_factor" type = "double" >1.0</variable>
      </variable_group>

      <variable_group id = "parameters" >
        <variable id = "using_server" type = "bool" >true</variable>
        <variable id = "info_level" type = "int" >50</variable>
        <variable id = "print_file" type="bool">true</variable>
      </variable_group>
    </variable_definition>
  </context>

</simulation>
