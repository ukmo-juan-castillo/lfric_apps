module analytic_temperature_profiles_mod_test

  use constants_mod, only : i_def, r_def
  use pFUnit_Mod

  implicit none

  private
  public :: set_up, tear_down, &
            test_all

  real(r_def), parameter :: bvf_square = 0.0001_r_def
  real(r_def), parameter :: theta_surf = 300.0_r_def
  real(r_def), parameter :: pert_width_scaling = 1.0_r_def
  real(r_def), parameter :: pert_centre = 120.0_r_def

  real(r_def), parameter :: surface_pressure = 1000.0e2_r_def

  integer(i_def),                                                  &
               parameter :: profile_size       = 4
  real(r_def), parameter :: profile_data(4)    = (/ 280.0_r_def,   &
                                                    300.0_r_def,   &
                                                    305.0_r_def,   &
                                                    400.0_r_def /)
  real(r_def), parameter :: profile_heights(4) = (/ 500.0_r_def,   &
                                                    4.0e3_r_def,   &
                                                    4.0e3_r_def,   &
                                                    40.0e3_r_def /)


contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @before
  subroutine set_up()

    use feign_config_mod,        only : feign_base_mesh_config,           &
                                        feign_extrusion_config,           &
                                        feign_planet_config,              &
                                        feign_initial_temperature_config, &
                                        feign_idealised_config,           &
                                        feign_initial_wind_config,        &
                                        feign_initial_density_config,     &
                                        feign_initial_pressure_config

    use base_mesh_config_mod, only : geometry_planar, &
                                     topology_fully_periodic
    use extrusion_config_mod,         only : method_uniform, &
                                             stretching_method_linear
    use idealised_config_mod,  only: test_cold_bubble_x
    use initial_pressure_config_mod,  only : method_balanced
    use initial_temperature_config_mod, only : perturb_none
    use initial_wind_config_mod, only : profile_none

    implicit none

    call feign_extrusion_config( planet_radius=6000000.0_r_def,              &
                                 domain_height=10.0_r_def,                   &
                                 method=method_uniform,                      &
                                 number_of_layers=2_i_def,                   &
                                 stretching_method=stretching_method_linear, &
                                 stretching_height=1.0_r_def )
    call feign_planet_config( gravity=10.0_r_def, omega=8.0E-5_r_def, &
                              rd=300.0_r_def, cp=1000.0_r_def,        &
                              p_zero=100000.0_r_def,                  &
                              scaling_factor=1.0_r_def )

    call feign_initial_temperature_config( bvf_square=bvf_square,                 &
                                           theta_surf=theta_surf,                 &
                                           pert_centre=pert_centre,               &
                                           pert_width_scaling=pert_width_scaling, &
                                           perturb=perturb_none,                  &
                                           profile_size=profile_size,             &
                                           profile_data=profile_data,             &
                                           profile_heights=profile_heights )

    call feign_initial_pressure_config( method = method_balanced,             &
                                        surface_pressure = surface_pressure )

    call feign_idealised_config( test=test_cold_bubble_x, f_lon_deg=0.0_r_def )

    call feign_base_mesh_config                  &
             ( file_prefix='foo',                &
               prime_mesh_name='unit_test',      &
               geometry=geometry_planar,         &
               prepartitioned=.false.,           &
               topology=topology_fully_periodic, &
               fplane=.false., f_lat_deg=0.0_r_def )

    call feign_initial_wind_config( profile=profile_none,                 &
                                    profile_data_u = (/ 0.0_r_def /),     &
                                    profile_data_v = (/ 0.0_r_def /),     &
                                    profile_data_w = (/ 0.0_r_def /),     &
                                    profile_heights_uv = (/ 0.0_r_def /), &
                                    profile_heights_w  = (/ 0.0_r_def /), &
                                    profile_size_uv = 1_i_def,            &
                                    profile_size_w  = 1_i_def,            &
                                    u0=0.0_r_def,                         &
                                    v0=0.0_r_def,                         &
                                    sbr_angle_lat=0.0_r_def,              &
                                    sbr_angle_lon=0.0_r_def,              &
                                    nl_constant=0.0_r_def,                &
                                    shear=1.0_r_def,                      &
                                    wavelength=1.0_r_def,                 &
                                    wind_time_period=0.0_r_def,           &
                                    smp_init_wind=.false. )
    call feign_initial_density_config( density_max = 1.0_r_def,                                      &
                                       density_background = 1.0_r_def,                               &
                                       r1 = 0.1_r_def, x1 = 0.0_r_def, y1 = 0.0_r_def, z1=0.0_r_def, &
                                       r2 = 0.1_r_def, x2 = 0.0_r_def, y2 = 0.0_r_def, z2=0.0_r_def )
  end subroutine set_up

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @after
  subroutine tear_down()

    use configuration_mod, only: final_configuration

    implicit none

    call final_configuration()

  end subroutine tear_down

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_all()

    use analytic_temperature_profiles_mod, only: analytic_temperature
    use reference_profile_mod,             only: reference_profile

    use idealised_config_mod,              only : test_cold_bubble_x, &
                                                  test_cold_bubble_y, &
                                                  test_warm_bubble,   &
                                                  test_warm_bubble_3d

    implicit none

    real(kind=r_def) :: xyz(3)
    real(kind=r_def) :: temperature, pressure, density
    real(kind=r_def) :: answer
    real(kind=r_def), parameter :: tol = 1.0e-14_r_def

    xyz = (/ 0.0_r_def, 0.0_r_def, 3000.0_r_def /)
    call reference_profile(pressure, density, temperature, xyz, test_cold_bubble_x)
    temperature = analytic_temperature(xyz, test_cold_bubble_x)
    answer = 300.0_r_def - 15.0_r_def/pressure
    @assertEqual(answer, temperature, tol)
    temperature = analytic_temperature(xyz, test_cold_bubble_y)
    @assertEqual(answer, temperature, tol)

    xyz = (/ 0.0_r_def, 1000.0_r_def, 260.0_r_def /)
    call reference_profile(pressure, density, temperature, xyz, test_warm_bubble)
    answer = temperature + 0.5_r_def
    temperature = analytic_temperature(xyz, test_warm_bubble)
    @assertEqual(answer, temperature, tol)

    xyz = (/ 0.0_r_def, 0.0_r_def, 350.0_r_def /)
    call reference_profile(pressure, density, temperature, xyz, test_warm_bubble_3d)
    answer = temperature + 0.5_r_def
    temperature = analytic_temperature(xyz, test_warm_bubble_3d)
    @assertEqual(answer, temperature, tol)

  end subroutine test_all

end module analytic_temperature_profiles_mod_test
